[Unit]
Description=Dchat API Server
After=network.target

[Service]
Type=simple
User=ec2-user
WorkingDirectory=/home/ec2-user/dchat/backend
Environment="PATH=/home/ec2-user/.local/bin:/usr/local/bin:/usr/bin:/bin"
Environment="PYTHONPATH=/home/ec2-user/dchat/backend"
ExecStart=/usr/bin/python3 -m src.main
Restart=always
RestartSec=10
StandardOutput=append:/var/log/dchat/api.log
StandardError=append:/var/log/dchat/api-error.log

[Install]
WantedBy=multi-user.target
