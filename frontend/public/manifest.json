{
  "name": "dchat.pro - Web3 Messaging Platform",
  "short_name": "dchat.pro",
  "description": "Decentralized messaging platform with Web3 payments, groups, and red packets",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#4F46E5",
  "orientation": "portrait-primary",
  "scope": "/",
  "icons": [
    {
      "src": "/logo192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/logo512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/apple-touch-icon.png",
      "sizes": "180x180",
      "type": "image/png",
      "purpose": "any"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/desktop-1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Chat interface"
    },
    {
      "src": "/screenshots/mobile-1.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobile chat"
    }
  ],
  "categories": ["social", "communication", "finance"],
  "shortcuts": [
    {
      "name": "New Message",
      "short_name": "New",
      "description": "Start a new conversation",
      "url": "/chat/new",
      "icons": [
        {
          "src": "/icons/new-message.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Groups",
      "short_name": "Groups",
      "description": "View your groups",
      "url": "/groups",
      "icons": [
        {
          "src": "/icons/groups.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Send Red Packet",
      "short_name": "Red Packet",
      "description": "Send a red packet",
      "url": "/redpacket/new",
      "icons": [
        {
          "src": "/icons/red-packet.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "media",
          "accept": ["image/*", "video/*", "audio/*"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+dchat",
      "url": "/chat?user=%s"
    }
  ]
}
